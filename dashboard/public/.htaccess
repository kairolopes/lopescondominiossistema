<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /sistema/
  
  # Não aplicar regras se o arquivo ou diretório existir
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Redirecionar tudo para o index.html (para o React Router funcionar)
  RewriteRule . index.html [L]
</IfModule>
